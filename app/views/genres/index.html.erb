<h3>ジャンル一覧・追加</h3>

<%= form_for(@genre) do |f| %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name, class: "name" %>

    <%= f.submit '追加' %>
<% end %>


<table>
  <thead>
    <tr>
      <th>ジャンル</th>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_genre_path(genre.id) %> </td>
    <% end %>
  </tbody>
</table>