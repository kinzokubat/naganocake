<h3>ジャンル一覧・追加</h3>

<%= form_for(@genre) do |f| %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name, class: "name" %>
    <label><%= f.radio_button :is_active, "true" %>有効</label>
    <label><%= f.radio_button :is_active, "false" %>無効</label>
    <%= f.submit '追加' %>
<% end %>


<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
                <% if genre.is_active == true %>
                  <p>有効</p>
                <% else %>
                  <p>無効</p>
                <% end %>
              </td>
        <td><%= link_to "編集", edit_genre_path(genre.id) %> </td>
    <% end %>
  </tbody>
</table>