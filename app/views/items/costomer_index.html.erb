<div class="container">
  <div class="row">
    <!--ジャンル部分-->
    <div class="col-xs-3">
      <div style="margin-top: 30px;" >
        <ul class="nav nav-pills nav-stacked">
        	<li role="presentation" class="active"><h1>ジャンル検索</h1></li> <br></br>
        	<li role="presentation"><p>ケーキ</p></li> </br>
        	<li role="presentation"><p>焼き菓子</p></li> </br>
        	<li role="presentation"><p>プリン</p></li> </br>
        	<li role="presentation"><p>キャンディ</p></li> </br>
        </ul>
      </div>
    </div>

    <!--一覧部分-->
    <div class="col-xs-9">
      <h1>商品一覧</h1>
      <p>(全<%= @items.count %>件)</p> <br></br>
      <table class="table">
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= link_to item.name, item_path(item)%></td>
              <td><%= item.price %>円</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>