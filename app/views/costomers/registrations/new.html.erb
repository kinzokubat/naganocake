<div class="container">
<div class="row">
<div class="col-xs-10 col-xs-offset-2">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "costomers/shared/error_messages", resource: resource %>

　<table>
　<tr>
　<th>
　<!--姓-->
  <div class="field">
  <%= f.label :姓 %><br />
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  </th>
  <th>
  <!--名-->
  <div class="field">
  <%= f.label :名 %><br />
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  </th>
  </tr>
  <tr>
  <th>
　<!--姓カナ-->
  <div class="field">
  <%= f.label :セイ %><br />
  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  </th>
  <th>
  <!--名カナ-->
  <div class="field">
  <%= f.label :メイ %><br />
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  </th>
  </tr>
  </table>
　<!--メールアドレス-->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!--郵便番号-->
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

   <!--住所-->
  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <!--電話番号-->
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

　<!--パスワード-->
  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

　<!--パスワード確認用-->
  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

　<!--送信ボタン-->
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<h2>こちらからログインしてください。</h2>

<%= render "costomers/shared/links" %>

</div><!--col-xs-10 col-xs-offset-2-->
</div><!--row-->
</div><!--container-->
