<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h1>ジャンル一覧・追加</h1><br></br>

      <%= form_for(@genre, url: admin_genres_path) do |f| %>
          <%= f.label :ジャンル %>
          <%= f.text_field :name, class: "name" %>
          <label><%= f.radio_button :is_active, "true" %>有効</label>
          <label><%= f.radio_button :is_active, "false" %>無効</label>
          <%= f.submit '追加', class: "btn btn-info active" %>
      <% end %>
      <br></br>


      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                      <% if genre.is_active == true %>
                        <p>有効</p>
                      <% else %>
                        <p>無効</p>
                      <% end %>
                    </td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id) %> </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





