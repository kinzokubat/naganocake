<div class="controllers">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h1>編集画面</h1><br></br>
      <%= form_for(@genre, url: admin_genre_path) do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :name, class: "name" %>
        <label><%= f.radio_button :is_active, "true" %>有効</label>
        <label><%= f.radio_button :is_active, "false" %>無効</label>
        <%= f.submit '変更を保存する' , class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>






