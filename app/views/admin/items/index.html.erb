<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>商品一覧</h1><br></br>
      <div class="col-xs-12 col-xs-offset-10">
        <%= link_to "商品を追加する", new_admin_item_path	, class: "btn btn-info active" %> <br></br>
      </div>
      <table class="table">
        <thaed>
         <tr>
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </tr>
        </thaed>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item)%></td>
              <td><%= item.price %>円</td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  <p>販売中</p>
                <% else %>
                  <p>売り切れ</p>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @items %>
        </tbody>
      </table>
    </div>
  </div>
</div>

