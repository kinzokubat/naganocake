<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
    <div class="col-xs-10 col-xs-offset-2">
      <h2>商品名</h2>
      <p><%= @item.name %></p>
      <h2>商品説明</h2>
      <p><%= @item.introduction %></p>
      <h2>ジャンル</h2>
      <p><%= @item.genre.name %></p>
      <h2>税込価格(税抜価格)</h2>
      <p><%= (@item.price * 1.1.round(2)).round %>(<%= @item.price %>)円</p>
      <h2>販売ステータス</h2>
      <% if @item.is_active == true %>
        <p>販売中</p>
      <% else %>
        <p>売り切れ</p>
      <% end %>
    </div>
    <div class="col-xs-12 col-xs-offset-10">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-info active" %>
      <%= link_to "一覧へ", admin_items_path, class: "btn btn-info active" %>
      <!--カート機能のform-->
      <%= form_with model: @cart_item, url:'/cartitems/create', local:true do |f| %>
      <h4>会員id</h4>
      <%= f.text_field :costomer_id %>
      <h4>商品id</h4>
      <%= f.text_field :item_id %>
      <h4>数量</h4>
      <%= f.text_field :amount %>
      <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>

