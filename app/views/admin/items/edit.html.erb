<div class="container">
  <div class="row">
    <h1>商品編集</h1><br></br>
    <div class="col-xs-10 col-xs-offset-2">
      <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>
        <h4>商品名</h4><%= f.text_field :name %>
        <h4>商品説明</h4><%= f.text_area :introduction %>
        <h4>ジャンル</h4><%= f.collection_select :genre_id, Genre.all, :id, :name %>
        <h4>税抜価格</h4><%= f.text_field :price %>
        <h4>販売ステータス</h4><%= f.select :is_active ,[['販売中',true],['売り切れ',false]] %> <br></br>
        <%= f.submit '変更を保存', class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>