<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>会員一覧</h1> <br></br>
      <table class='table'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @costomers.each do |costomer| %>
            <tr>
              <td><%= costomer.id %></td>
              <td><%=link_to costomer.full_name, admin_costomer_path(costomer) %></td>
              <td><%= costomer.email %></td>
              <td>
                <% if costomer.is_deleted == true %>
                <p>有効会員</p>
                <% else %>
                <p>退会済み</p>
              <% end %>
              </td>
            </tr>
           <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>

