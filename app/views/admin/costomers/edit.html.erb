<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>会員情報編集</h2>
      <table class='table'>
        <%= form_with model:@costomer, url: admin_costomer_path(@costomer), local:true do |f| %>
        <thead>
          <tr>
            <th>会員ID</th>
            <th><%= @costomer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= f.text_field :last_name %></th>
            <th><%= f.text_field :first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= f.text_field :last_name_kana %></th>
            <th><%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :postal_code %></th>
            <th></th>
          <tr>
            <th>住所</th>
            <th><%= f.text_field :address %></th>
            <th></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= f.text_field :telephone_number %></th>
            <th></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th> <%= f.email_field :email %></th>
            <th></th>
          </tr>
          <tr>
            <th>会員ステータス</th> <!--ラジオボタンでステータス　有効　退会すみ-->
            <th>
      　　　　<%= f.radio_button :is_deleted, :false %>
      　　　　<%= f.label :is_deleted, "有効会員", {value: :false, style: "display: inline-block;"} %>
      　　　　<%= f.radio_button :is_deleted, :true %>
      　　　　<%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"} %>
      　　　</th>
            <th></th>
          </tr>
          <tr>
            <th><%= f.submit "変更を保存する", class: "btn btn-info active" %></th>
            <% end %>
          </tr>
            <th colspan="3"></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
