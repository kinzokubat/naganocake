<div class="container">
  <div class="row">
    <div class="col-xs-9 ">
      <h1>注文履歴一覧</h1> <br></br>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= link_to order.name, admin_order_path(order) %></td>
            <td><%=  %></td>

            <td><%= order.status_i18n %></td>
            <!--_i18=日本語化-->

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>