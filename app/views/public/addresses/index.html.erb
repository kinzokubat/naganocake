<h3>配送先登録/一覧</h3>

<%= form_for(@address) do |f| %>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, class: "postal_code" %><br>
    <%= f.label :住所 %>
    <%= f.text_field :address, class: "address" %><br>
    <%= f.label :宛名 %>
    <%= f.text_field :name, class: "name" %><br>
    <%= f.submit '登録する' %>
<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %> </td>
        <td><%= link_to '削除', address_path(address.id), method: :delete %></td>
    <% end %>
  </tbody>
</table>