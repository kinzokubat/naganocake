
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-xs-offset-2">
      <h1>配送先登録/一覧</h1> <br></br>
      
      <%= form_for(@address) do |f| %>
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, class: "postal_code" %><br>
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "address" %><br>
          <%= f.label :宛名 %>
          <%= f.text_field :name, class: "name" %><br>
          <%= f.submit '登録する' ,class: "btn btn-info active" %>  <br></br>
      <% end %>
    </div>
    <div class="col-xs-8 col-xs-offset-2">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
        </thead>
      
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-info active" %></td>
              <td><%= link_to '削除', address_path(address.id), method: :delete, class: "btn btn-info active" %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>