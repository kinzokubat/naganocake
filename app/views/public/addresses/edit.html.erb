
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>配送先編集</h3>
      <%= form_for(@address) do |f| %>
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code, class: "postal_code" %>
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "address" %>
        <%= f.label :宛名 %>
        <%= f.text_field :name, class: "name" %>
        <%= f.submit '編集する' ,class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>