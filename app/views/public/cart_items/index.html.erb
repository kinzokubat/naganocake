<div class="container">
<div class="row">
<div class="col-xs-12">
<h2>ショッピングカート</h2>
  <table class='table'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>削除ボタン</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td>￥<%= (cart_item.item.price * 1.1.round(2)).round %></td>
        <td><%= cart_item.amount %>個</td>
        <td>￥<%= (cart_item.item.price * cart_item.amount * 1.1.round(2)).round %></td>
        <td><%= link_to '削除', cart_item_path(cart_item.id), method: :delete %><td>
      </tr>
     <% end %>
  </tbody>
</table>
</div>
</div>
</div>