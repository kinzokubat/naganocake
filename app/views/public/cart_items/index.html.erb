<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <div class="col-xs-12 col-xs-offset-1">
          <h2>ショッピングカート</h2>
        </div>
        <div class="col-xs-12 col-xs-offset-10">
          <%= link_to 'カートを空にする',cart_items_destroy_all_path, method: :delete, class: "btn btn-danger"  %>
          <!--追加分-->
          <%= form_for cart_items_path, method: :patch do |f| %>
          <!--追加分-->
        </div>
        <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, :fill, 60,  60, format: 'jpeg' %>
                <%= cart_item.item.name %>
                </td>
              <td>￥<%= (cart_item.item.price * 1.1.round(2)).round %></td>
              <!--追加分-->
              <td><%= number_field_tag "amount[#{cart_item.id}]", cart_item.amount, in: 1..10 %></td>
              <!--追加分-->
              <td>￥<%= (cart_item.item.price * cart_item.amount * 1.1.round(2)).round %></td>
              <td><%= link_to '削除', cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %><td>
            </tr>
           <% end %>
        </tbody>
      </table>
      <div class="col-xs-12 col-xs-offset-1">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-info active" %>
      </div>
      <div class="col-xs-12 col-xs-offset-8">
        <tr>
          <th>合計金額</th>
          <th><%= @sum %>円</th>
        </tr>
        <br></br>
        <!--追加分-->
        <%= f.submit 'カート情報更新', class: "btn btn-info active" %>
        <% end %>
        <!--追加分-->
        <%= link_to "情報入力に進む",new_order_path, class: "btn btn-info active" %>
      </div>
    </div>
  </div>
</div>