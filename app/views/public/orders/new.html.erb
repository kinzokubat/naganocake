<div class="controllers">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url: orders_path do |f| %>
        <%= f.label :支払い方法 %><br>
          <label><%= f.radio_button :payment_method, "0" %>クレジットカード</label><br>
          <label><%= f.radio_button :payment_method, "1" %>銀行振り込み</label><br>
        <%= f.label :お届け先 %><br>
          <label><%=f.radio_button :city, "0" %>ご自身の住所</label><br>
            <p><%= @costomer.postal_code %><%= @costomer.address %><br>
            <%= @costomer.full_name %></p>
          <label><%=f.radio_button :city, "1" %>登録済住所から選択</label><br>
            <% @addresses.each do |address| %>
              <p><%= address.street %></p>
            <% end %>
            <label><%=f.radio_button :city, "2" %>新しいお届け先</label><br>
              <%= f.label :郵便番号（ハイフンなし） %>
              <%= f.text_field :postal_code, class: "postal_code" %><br>
              <%= f.label :住所 %>
              <%= f.text_field :address, class: "address" %><br>
              <%= f.label :宛名 %>
              <%= f.text_field :name, class: "name" %><br>
          <%= f.submit '確認画面へ進む', class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>