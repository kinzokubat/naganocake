
<h2>注文情報</h2>
<table class='table'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>支払方法</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
              <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
              <td><%= @order.payment_method %></td>
              <td><%= @order.status %></td>
            </tr>
        </tbody>
  </table>


