<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h1>注文情報確認</h1> <br></br>
    </div>
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, :fill, 60,  60, format: 'jpeg' %>
              <%= cart_item.item.name %>
            </td>
            <td>￥<%= (cart_item.item.price * 1.1.round(2)).round %></td>
            <td><%= cart_item.amount %>個</td>
            <td>￥<%= (cart_item.item.price * cart_item.amount * 1.1.round(2)).round %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <table class="table">
        <tr>
          <td>送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= @sum + @order.shipping_cost %></td>
        </tr>
      </table>
    </div>

    <div class="col-xs-12">
      <h3>支払い方法</h3><%= @order.payment_method %> <br></br>
      <h3>お届け先</h3>
      <span><%= @order.postal_code %></span>
      <span><%= @order.address %></span></br>
      <span><%= @order.name %></span> <br></br>
    </div>

    <div>
      <%= form_with model: @order, local:true do |f| %>
        <%= f.hidden_field :costomer_id, :value => current_costomer.id %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :status, {value: 'wait'} %>
        <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
        <%= f.hidden_field :total_payment, :value => @sum + @order.shipping_cost %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <%= f.submit '購入を確定', class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>