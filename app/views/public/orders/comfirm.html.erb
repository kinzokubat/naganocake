<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <h1>注文情報確認</h1> <br></br>
    </div>
    <div class="col-xs-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, :fill, 60,  60, format: 'jpeg' %>
              <%= cart_item.item.name %>
            </td>
            <td>￥<%= (cart_item.item.price * 1.1.round(2)).round %></td>
            <td><%= cart_item.amount %>個</td>
            <td>￥<%= (cart_item.item.price * cart_item.amount * 1.1.round(2)).round %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <table class="table">
        <tr>
          <td>送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= @sum + @order.shipping_cost %></td>
        </tr>
      </table>
    </div>

    <div class="col-xs-12">
      <h3>支払い方法</h3><%= @order.payment_method %> <br></br>
      <h3>お届け先</h3>
      <span><%= @order.postal_code %></span>
      <span><%= @order.address %></span></br>
      <span><%= @order.name %></span> <br></br>
    </div>
    
    <%= link_to "確定する",order_complete_path %>

  </div>
</div>