<div class="container">
  <div class="row">
    <!--ジャンル部分-->
    <div class="col-xs-3">
      <div style="margin-top: 30px;" >
        <ul class="nav nav-pills nav-stacked">
        	<li role="presentation" class="active"><h1>ジャンル検索</h1></li> <br></br>
        	<li role="presentation"><p>ケーキ</p></li> </br>
        	<li role="presentation"><p>焼き菓子</p></li> </br>
        	<li role="presentation"><p>プリン</p></li> </br>
        	<li role="presentation"><p>キャンディ</p></li> </br>
        </ul>
      </div>
    </div>
    <!--詳細部分-->
    <div class="col-xs-9">
      <div style="margin-top: 45px;" >
        <h2><strong><%= @item.name %></strong></h2>
        <h2>商品説明</h2>
        <p><%= @item.introduction %></p><br></br>
        <p><strong>￥<%= (@item.price * 1.1.round(2)).round %></strong>(税込)</p>
      </div>
      </div>

    <div class="col-xs-12 col-xs-offset-6">
      <!--カート機能のform-->
      <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>

      <!--↓商品idをフォームに入れる-->
      <%= f.hidden_field :item_id, :value => @item.id %>

      <h4>数量</h4>
      <%= f.text_field :amount %>
      <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>