<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= attachment_image_tag @item, :image, :fill, 300,  300, format: 'jpeg' %>
    </div>
    <!--詳細部分-->
    <div class="col-xs-6">
      <div style="margin-top: 45px;" >
        <h2><strong><%= @item.name %></strong></h2>
        <h2>商品説明</h2>
        <p><%= @item.introduction %></p><br></br>
        <p><strong>￥<%= (@item.price * 1.1.round(2)).round %></strong>(税込)</p>
      </div>
      </div>

    <div class="col-xs-12 col-xs-offset-6">
      <!--カート機能のform-->
      <%= form_with model: @cart_item, url: cart_items_path, local:true do |f| %>

      <!--↓商品idをフォームに入れる-->
      <%= f.hidden_field :item_id, :value => @item.id %>

      <h4>数量</h4>
      <%= f.number_field :amount, min: 1 %>
      <%= f.submit 'カートに入れる', class: "btn btn-info active" %>
      <% end %>
    </div>
  </div>
</div>